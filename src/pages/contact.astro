---
import { Github, Mail, Twitter } from 'lucide-react';

import Layout from '../layouts/Layout.astro';
import { Navigation } from '../components/Nav';
import { Card } from '../components/Card';
---

<Layout>
    <div class="bg-gradient-to-tl from-zinc-900/0 via-zinc-900 to-zinc-900/0">
        <Navigation />
        <div class="container flex items-center justify-center min-h-screen px-4 mx-auto">
            <div class="grid w-full grid-cols-1 gap-8 mx-auto mt-32 sm:mt-0 sm:grid-cols-3 lg:gap-16">
                <Card client:load>
                    <a
                        href="https://twitter.com/sandibi13"
                        target="_blank"
                        class="p-4 relative flex flex-col items-center gap-4 duration-700 group md:gap-8 md:py-24 lg:pb-48 md:p-16"
                    >
                        <span
                            class="absolute w-px h-2/3 bg-gradient-to-b from-zinc-500 via-zinc-500/50 to-transparent"
                            aria-hidden="true"
                        />
                        <span class="relative z-10 flex items-center justify-center w-12 h-12 text-sm duration-1000 border rounded-full text-zinc-200 group-hover:text-white group-hover:bg-zinc-900 border-zinc-500 bg-zinc-900 group-hover:border-zinc-200 drop-shadow-orange">
                            <Twitter size={20} />
                        </span>{" "}
                        <div class="z-10 flex flex-col items-center">
                            <span class="lg:text-xl font-medium duration-150 xl:text-3xl text-zinc-200 group-hover:text-white font-display">
                                @sandibi13
                            </span>
                            <span class="mt-4 text-sm text-center duration-1000 text-zinc-400 group-hover:text-zinc-200">
                                Twitter
                            </span>
                        </div>
                    </a>
                </Card>
                <Card client:load>
                    <a
                        href="mailto:sandipanb223@gmail.com"
                        target="_blank"
                        class="p-4 relative flex flex-col items-center gap-4 duration-700 group md:gap-8 md:py-24 lg:pb-48 md:p-16"
                    >
                        <span
                            class="absolute w-px h-2/3 bg-gradient-to-b from-zinc-500 via-zinc-500/50 to-transparent"
                            aria-hidden="true"
                        />
                        <span class="relative z-10 flex items-center justify-center w-12 h-12 text-sm duration-1000 border rounded-full text-zinc-200 group-hover:text-white group-hover:bg-zinc-900 border-zinc-500 bg-zinc-900 group-hover:border-zinc-200 drop-shadow-orange">
                            <Mail size={20} />
                        </span>{" "}
                        <div class="z-10 flex flex-col items-center">
                            <span class="lg:text-xl font-medium duration-150 xl:text-3xl text-zinc-200 group-hover:text-white font-display">
                                sandipanb223@gmail.com
                            </span>
                            <span class="mt-4 text-sm text-center duration-1000 text-zinc-400 group-hover:text-zinc-200">
                                Email
                            </span>
                        </div>
                    </a>
                </Card>
                <Card client:load>
                    <a
                        href="https://github.com/sandibi13"
                        target="_blank"
                        class="p-4 relative flex flex-col items-center gap-4 duration-700 group md:gap-8 md:py-24 lg:pb-48 md:p-16"
                    >
                        <span
                            class="absolute w-px h-2/3 bg-gradient-to-b from-zinc-500 via-zinc-500/50 to-transparent"
                            aria-hidden="true"
                        />
                        <span class="relative z-10 flex items-center justify-center w-12 h-12 text-sm duration-1000 border rounded-full text-zinc-200 group-hover:text-white group-hover:bg-zinc-900 border-zinc-500 bg-zinc-900 group-hover:border-zinc-200 drop-shadow-orange">
                            <Github size={20} />
                        </span>{" "}
                        <div class="z-10 flex flex-col items-center">
                            <span class="lg:text-xl font-medium duration-150 xl:text-3xl text-zinc-200 group-hover:text-white font-display">
                                sandibi13
                            </span>
                            <span class="mt-4 text-sm text-center duration-1000 text-zinc-400 group-hover:text-zinc-200">
                                Github
                            </span>
                        </div>
                    </a>
                </Card>
            </div>
        </div>
    </div>
</Layout>